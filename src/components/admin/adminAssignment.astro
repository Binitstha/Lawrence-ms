        id="semesterSelect"
      >
        <option class="text-start text" value="1">Semester 1</option>
        <option class="text-start text" value="2">Semester 2</option>
        <option class="text-start text" value="3">Semester 3</option>
        <option class="text-start text" value="4">Semester 4</option>
        <option class="text-start text" value="5">Semester 5</option>
