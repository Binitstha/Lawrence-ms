<div class="mainBox w-full h-[90vh] flex flex-col bg-gray-100">
  <!-- small boxes -->
  <div
    class="small-boxes grid grid-cols-2 lg:grid-cols-4 w-[100%] gap-4 justify-center items-center p-2 px-10 py-10 h-fit pt-12"
  >
    <div
      class="small-box shadow-md bg-center bg-cover flex flex-col h-fit hover:shadow-xl transition-all ease-in-out duration-300 rounded-md w-full bg-blue-200"
    >
      <div class="details flex w-full m-2 rounded-sm p-2 text-lg">
        Total students
      </div>
      <div class="icon-and-count flex justify-between px-10">
        <i class="fa-regular fa-user text-[2rem] flex items-center"></i>
        <div class="student-count flex justify-center items-center text-[2rem]">
          516
        </div>
      </div>
    </div>
    <div
      class="small-box shadow-md bg-center bg-cover flex flex-col h-fit hover:shadow-xl transition-all ease-in-out duration-300 rounded-md w-full bg-green-200"
    >
      <div class="details flex w-full m-2 rounded-sm p-2 text-lg">
        Total students
      </div>
      <div class="icon-and-count flex justify-between px-10">
        <i class="fa-regular fa-user text-[2rem] flex items-center"></i>
        <div class="student-count flex justify-center items-center text-[2rem]">
          516
        </div>
      </div>
    </div>
    <div
      class="small-box shadow-md bg-center bg-cover flex flex-col h-fit hover:shadow-xl transition-all ease-in-out duration-300 rounded-md w-full bg-orange-200"
    >
      <div class="details flex w-full m-2 rounded-sm p-2 text-lg">
        Total students
      </div>
      <div class="icon-and-count flex justify-between px-10">
        <i class="fa-regular fa-user text-[2rem] flex items-center"></i>
        <div class="student-count flex justify-center items-center text-[2rem]">
          516
        </div>
      </div>
    </div>
    <div
      class="small-box shadow-md bg-center bg-cover flex flex-col h-fit hover:shadow-xl transition-all ease-in-out duration-300 rounded-md w-full bg-red-200"
    >
      <div class="details flex w-full m-2 rounded-sm p-2 text-lg">
        Total students
      </div>
      <div class="icon-and-count flex justify-between px-10">
        <i class="fa-regular fa-user text-[2rem] flex items-center"></i>
        <div class="student-count flex justify-center items-center text-[2rem]">
          516
        </div>
      </div>
    </div>
  </div>
  <div class="large-boxes flex flex-col md:flex-row px-8 justify-between">
    <div
      class="notices shadow-lg m-2 rounded-md border w-full h-full bg-white hover:shadow-xl transition-all ease-in-out duration-300"
    >
      <div class="titleBar flex justify-between">
        <div class="flex text-lg p-4">Notices</div>
        <button
          id="addNotice"
          class="my-4 mx-4 bg-white shadow-md rounded-md border-2 border-blue-500 hover:bg-blue-500 transition-all ease-in-out hover:text-white px-5"
          >Add</button
        >
      </div>
      <div class="flex pl-5 pr-10 justify-between">
        <div class="w-[25%]">Title</div>
        <div class="w-[50%]">Message</div>
        <div class="w-[25%] text-right">Actions</div>
      </div>
      <hr class="border-gray-200 border-1 w-[94%] ml-[2%] mb-3" />
      <div id="noticeContainer" class="overflow-y-scroll h-80"></div>
    </div>
    <div
      class="calender border m-2 rounded-md shadow-lg w-full md:w-[480px] p-2 h-fit bg-gray-50 hover:shadow-xl transition-all ease-in-out duration-300"
      id="calendar"
    >
      <!-- <calendar/> -->
    </div>
  </div>
  <!-- notice view modal -->
  <div
    id="noticeViewModal"
    class="transition-all ease-in-out absolute w-full h-[90vh] z-20 bg-[rgba(148,148,148,0.14)] -top-[100vh]"
  >
    <div
      class="flex relative z-20 rounded-md flex-col bg-white shadow-lg p-3 ml-[15%] mt-[10%] w-[50%]"
    >
      <div class="font-bold pb-5">Notice</div>
      <hr class="border-gray-300 border-1 w-full mb-3" />

      <div class="flex font-bold text-lg pb-5" id="noticeModalHeader">
        Header
      </div>
      <div class="flex" id="noticeModalDes">description</div>
      <div
        id="noticeViewModalCloseBtn"
        class="absolute -right-2 -top-2 text-white bg-[rgb(255,103,43)] rounded-full h-6 w-6 flex justify-center items-center cursor-pointer hover:bg-red-500"
      >
        <i class="fa-solid fa-xmark"></i>
      </div>
    </div>
  </div>

  <!-- add notice modal -->
  <div
    id="addNoticeModal"
    class="flex transition-all ease-in-out -top-[100vh] absolute w-[86.8%] bg-[rgba(219,219,219,0.8)] h-[100vh]"
  >
    <div
      class="container relative flex flex-col w-[50%] mx-auto mt-10 h-fit rounded-md shadow-md bg-white p-5"
    >
      <div
        class="mx-auto text-2xl font-bold w-fit border-b-2 border-blue-600 mb-10"
      >
        Add notice
      </div>
      <div class="font-bold">Header</div>
      <input
        class="border-2 border-blue-500 rounded-md px-2"
        type="text"
        id="addNoticeHeader"
        placeholder="Notice Header"
      />
      <div class="font-bold">Description</div>
      <textarea
        id="addNoticeDes"
        cols="30"
        rows="10"
        class="border-2 border-blue-500 rounded-md resize-none px-2"
        placeholder="Notice Description"></textarea>
      <div class="flex justify-end mt-2">
        <div
          id="submitNotice"
          class="border-2 border-blue-500 px-7 rounded-md hover:bg-blue-500 transition-all ease-in-out hover:text-white shadow-md"
        >
          Submit
        </div>
      </div>
      <div
        id="addNoticeModalCloseBtn"
        class="absolute -right-2 -top-2 text-white bg-[rgb(255,103,43)] rounded-full h-6 w-6 flex justify-center items-center cursor-pointer hover:bg-red-500"
      >
        <i class="fa-solid fa-xmark"></i>
      </div>
    </div>
  </div>
  <script src="../../scripts/renderer/noticeRenderer.js"  ></script>
  <script src="../../scripts//controllers/addNoticeModalController"  ></script>
</div>
